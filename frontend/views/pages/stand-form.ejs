                                                <label class="form-check-label" for="catering">Restauration</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="transport" name="additionalServices" value="Transport">
                                                <label class="form-check-label" for="transport">Transport</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Logo -->
