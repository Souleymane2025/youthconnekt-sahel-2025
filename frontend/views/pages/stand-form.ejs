<!-- Formulaire de Réservation -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-container bg-white rounded-3 shadow-lg p-5">
                    <div class="text-center mb-4">
                        <h2 class="section-title">Formulaire de Réservation</h2>
                        <p class="text-muted">Remplissez le formulaire ci-dessous pour réserver votre stand</p>
                    </div>

                    <form id="standForm" class="needs-validation" novalidate>
                        <!-- Informations de l'entreprise -->
                        <div class="form-section mb-4">
                            <h4 class="form-section-title">
                                <i class="fas fa-building me-2"></i>
                                Informations de l'Entreprise
                            </h4>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="companyName" class="form-label">Nom de l'entreprise *</label>
                                    <input type="text" class="form-control" id="companyName" name="companyName" required>
                                    <div class="invalid-feedback">Veuillez saisir le nom de l'entreprise.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="contactPerson" class="form-label">Personne de contact *</label>
                                    <input type="text" class="form-control" id="contactPerson" name="contactPerson" required>
                                    <div class="invalid-feedback">Veuillez saisir le nom de la personne de contact.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                    <div class="invalid-feedback">Veuillez saisir un email valide.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Téléphone *</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" required>
                                    <div class="invalid-feedback">Veuillez saisir un numéro de téléphone.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="website" class="form-label">Site web</label>
                                    <input type="url" class="form-control" id="website" name="website">
                                </div>
                                <div class="col-md-6">
                                    <label for="country" class="form-label">Pays *</label>
                                    <select class="form-select" id="country" name="country" required>
                                        <option value="">Sélectionner un pays</option>
                                        <option value="Tchad">Tchad</option>
                                        <option value="Burkina Faso">Burkina Faso</option>
                                        <option value="Sénégal">Sénégal</option>
                                        <option value="Mali">Mali</option>
                                        <option value="Niger">Niger</option>
                                        <option value="Mauritanie">Mauritanie</option>
                                        <option value="Autre">Autre</option>
                                    </select>
                                    <div class="invalid-feedback">Veuillez sélectionner un pays.</div>
                                </div>
                                <div class="col-12">
                                    <label for="address" class="form-label">Adresse complète</label>
                                    <textarea class="form-control" id="address" name="address" rows="2"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Détails du stand -->
                        <div class="form-section mb-4">
                            <h4 class="form-section-title">
                                <i class="fas fa-store me-2"></i>
                                Détails du Stand
                            </h4>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="standType" class="form-label">Type de stand *</label>
                                    <select class="form-select" id="standType" name="standType" required>
                                        <option value="">Sélectionner un type</option>
                                        <option value="Standard">Stand Standard - 500 USD</option>
                                        <option value="Premium">Stand Premium - 800 USD</option>
                                        <option value="VIP">Stand VIP - 1200 USD</option>
                                    </select>
                                    <div class="invalid-feedback">Veuillez sélectionner un type de stand.</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="standSize" class="form-label">Taille souhaitée</label>
                                    <select class="form-select" id="standSize" name="standSize">
                                        <option value="">Sélectionner une taille</option>
                                        <option value="3x2">3m x 2m (Standard)</option>
                                        <option value="4x3">4m x 3m (Premium)</option>
                                        <option value="5x4">5m x 4m (VIP)</option>
                                        <option value="Custom">Taille personnalisée</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="description" class="form-label">Description de l'entreprise *</label>
                                    <textarea class="form-control" id="description" name="description" rows="3" required placeholder="Décrivez votre entreprise et ses activités..."></textarea>
