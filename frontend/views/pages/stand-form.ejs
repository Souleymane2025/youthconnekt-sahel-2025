<!-- Custom Scripts -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('standForm');
    const submitBtn = form.querySelector('button[type="submit"]');
    const standTypeSelect = document.getElementById('standType');
    const standSizeSelect = document.getElementById('standSize');
    
    // Synchroniser le type de stand avec la taille
    standTypeSelect.addEventListener('change', function() {
        const type = this.value;
        standSizeSelect.value = '';
        
        if (type === 'Standard') {
            standSizeSelect.value = '3x2';
        } else if (type === 'Premium') {
            standSizeSelect.value = '4x3';
        } else if (type === 'VIP') {
            standSizeSelect.value = '5x4';
        }
    });
    
    // Validation du formulaire
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        if (!form.checkValidity()) {
            e.stopPropagation();
            form.classList.add('was-validated');
            return;
        }
        
        // Désactiver le bouton de soumission
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Réservation en cours...';
        
        // Préparer les données
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Collecter les services additionnels
        const additionalServices = [];
        const serviceCheckboxes = form.querySelectorAll('input[name="additionalServices"]:checked');
        serviceCheckboxes.forEach(checkbox => {
            additionalServices.push(checkbox.value);
        });
        data.additionalServices = additionalServices.join(', ');
        
        // Soumettre le formulaire
        fetch('/partner-forms/stand', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                showSuccessMessage(result.message);
                form.reset();
                form.classList.remove('was-validated');
            } else {
                showErrorMessage(result.message);
            }
        })
        .catch(error => {
            console.error('Erreur:', error);
            showErrorMessage('Une erreur est survenue lors de la réservation. Veuillez réessayer.');
        })
        .finally(() => {
            // Réactiver le bouton
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-calendar-check me-2"></i>Réserver le stand';
        });
    });
    
    function showSuccessMessage(message) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert alert-success alert-dismissible fade show';
        alertDiv.innerHTML = `
            <i class="fas fa-check-circle me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        form.insertBefore(alertDiv, form.firstChild);
        
        // Faire défiler vers le haut
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    function showErrorMessage(message) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert alert-danger alert-dismissible fade show';
        alertDiv.innerHTML = `
            <i class="fas fa-exclamation-circle me-2"></i>
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        form.insertBefore(alertDiv, form.firstChild);
        
        // Faire défiler vers le haut
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
});
</script>

