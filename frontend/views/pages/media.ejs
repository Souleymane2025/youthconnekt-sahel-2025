<%- include('../layouts/header', { title: title, page: page }) %>

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content text-white">
                    <h1 class="display-4 fw-bold mb-4">
                        <span class="typing-animation">Centre Média</span>
                    </h1>
                    <p class="lead mb-4">
                        Découvrez toutes les ressources médiatiques, photos, vidéos et documents 
                        officiels du Forum YouthConnekt Sahel 2025.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div style="width: 100%; height: 300px; background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.2)); border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-photo-video fa-5x text-white opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Gallery Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Galerie Photos</h2>
            <p class="section-subtitle">Moments marquants du Forum YouthConnekt Sahel 2025</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="gallery-card bg-white rounded-3 shadow-sm overflow-hidden">
                    <div class="gallery-image" style="height: 250px; background: linear-gradient(45deg, #2E7D32, #4CAF50); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-image fa-3x text-white opacity-50"></i>
                    </div>
                    <div class="gallery-content p-3">
                        <h5 class="mb-2">Cérémonie d'ouverture</h5>
                        <p class="text-muted small mb-0">Photos de la cérémonie d'ouverture officielle</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-card bg-white rounded-3 shadow-sm overflow-hidden">
                    <div class="gallery-image" style="height: 250px; background: linear-gradient(45deg, #FF6B35, #FF9800); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-image fa-3x text-white opacity-50"></i>
                    </div>
                    <div class="gallery-content p-3">
                        <h5 class="mb-2">Sessions de travail</h5>
                        <p class="text-muted small mb-0">Moments d'échange et de collaboration</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="gallery-card bg-white rounded-3 shadow-sm overflow-hidden">
                    <div class="gallery-image" style="height: 250px; background: linear-gradient(45deg, #2196F3, #03A9F4); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-image fa-3x text-white opacity-50"></i>
                    </div>
                    <div class="gallery-content p-3">
                        <h5 class="mb-2">Expositions</h5>
                        <p class="text-muted small mb-0">Stands et projets innovants</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<%- include('../layouts/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .gallery-card {
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }
    
    .gallery-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        border-color: var(--primary-color);
    }
</style>