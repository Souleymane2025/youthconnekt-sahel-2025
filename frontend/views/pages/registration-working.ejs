                        <i class="fas fa-calendar-alt me-2"></i>
                        13-15 Octobre 2025 ‚Ä¢ N'Djamena, Tchad
                    </div>
                    <nav aria-label="breadcrumb" class="mt-3">
                        <ol class="breadcrumb justify-content-center bg-transparent">
                            <li class="breadcrumb-item"><a href="/" class="text-white-50">Accueil</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Inscription</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <!-- Registration Form Section -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Type d'inscription -->
                    <div class="card shadow-lg border-0 mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">
                                <i class="fas fa-users me-2"></i>
                                Type d'inscription
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded bg-light">
                                        <input class="form-check-input" type="radio" name="inscription_type" id="national" value="national" checked onchange="toggleRegistrationType()">
                                        <label class="form-check-label" for="national">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3" style="font-size: 2rem;">üáπüá©</div>
                                                <div>
                                                    <strong>Participant National</strong><br>
                                                    <small class="text-muted">Citoyens du Tchad et r√©sidents</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check p-3 border rounded">
                                        <input class="form-check-input" type="radio" name="inscription_type" id="international" value="international" onchange="toggleRegistrationType()">
                                        <label class="form-check-label" for="international">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3" style="font-size: 2rem;">üåç</div>
                                                <div>
                                                    <strong>Participant International</strong><br>
                                                    <small class="text-muted">Participants venant d'autres pays</small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulaire principal -->
                    <form id="registrationForm" enctype="multipart/form-data">
                        <!-- Informations personnelles -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-header bg-success text-white">
                                <h4 class="mb-0">
                                    <i class="fas fa-user me-2"></i>
                                    Informations personnelles
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="first_name" class="form-label">
                                            <i class="fas fa-user me-2 text-primary"></i>Pr√©nom *
                                        </label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="last_name" class="form-label">
                                            <i class="fas fa-user me-2 text-primary"></i>Nom *
                                        </label>
                                        <input type="text" class="form-control" id="last_name" name="last_name" required>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">
                                            <i class="fas fa-envelope me-2 text-primary"></i>Email *
                                        </label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="phone" class="form-label">
                                            <i class="fas fa-phone me-2 text-primary"></i>T√©l√©phone *
                                        </label>
                                        <input type="tel" class="form-control" id="phone" name="phone" required>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="date_of_birth" class="form-label">
                                            <i class="fas fa-calendar me-2 text-primary"></i>Date de naissance *
                                        </label>
                                        <input type="date" class="form-control" id="date_of_birth" name="date_of_birth" required>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="gender" class="form-label">
                                            <i class="fas fa-venus-mars me-2 text-primary"></i>Genre *
                                        </label>
                                        <select class="form-select" id="gender" name="gender" required>
                                            <option value="">S√©lectionner</option>
                                            <option value="male">Masculin</option>
                                            <option value="female">F√©minin</option>
                                            <option value="other">Autre</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="profile_image" class="form-label">
                                            <i class="fas fa-camera me-2 text-primary"></i>Photo de profil *
                                        </label>
                                        <input type="file" class="form-control" id="profile_image" name="profile_image" accept="image/*" required>
                                        <small class="text-muted">Format: JPG, PNG. Max: 5MB</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Localisation -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-header bg-info text-white">
                                <h4 class="mb-0">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Localisation
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="country" class="form-label">
                                            <i class="fas fa-flag me-2 text-primary"></i>Pays *
                                        </label>
                                        <input type="text" class="form-control" id="country" name="country" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="city" class="form-label">
                                            <i class="fas fa-city me-2 text-primary"></i>Ville *
                                        </label>
                                        <input type="text" class="form-control" id="city" name="city" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Documents d'identit√© -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h4 class="mb-0">
                                    <i class="fas fa-id-card me-2"></i>
                                    Document d'identit√©
                                </h4>
                            </div>
                            <div class="card-body">
                                <!-- Section pour nationaux -->
                                <div id="national-documents" style="display: block;">
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Pour les participants nationaux, veuillez fournir votre carte d'identit√© nationale.
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="id_card_number" class="form-label">
                                                <i class="fas fa-hashtag me-2 text-primary"></i>Num√©ro de carte d'identit√©
                                            </label>
                                            <input type="text" class="form-control" id="id_card_number" name="id_card_number">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="id_card_image" class="form-label">
                                                <i class="fas fa-camera me-2 text-primary"></i>Photo de la carte d'identit√©
                                            </label>
                                            <input type="file" class="form-control" id="id_card_image" name="id_card_image" accept="image/*">
                                            <small class="text-muted">Format: JPG, PNG. Max: 5MB</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Section pour internationaux -->
                                <div id="international-documents" style="display: none;">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-passport me-2"></i>
                                        Pour les participants internationaux, veuillez fournir votre passeport.
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="passport_number" class="form-label">
                                                <i class="fas fa-hashtag me-2 text-primary"></i>Num√©ro de passeport
                                            </label>
                                            <input type="text" class="form-control" id="passport_number" name="passport_number">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="passport_image" class="form-label">
                                                <i class="fas fa-camera me-2 text-primary"></i>Photo du passeport
                                            </label>
                                            <input type="file" class="form-control" id="passport_image" name="passport_image" accept="image/*">
                                            <small class="text-muted">Format: JPG, PNG. Max: 5MB</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Informations professionnelles -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-header bg-secondary text-white">
                                <h4 class="mb-0">
                                    <i class="fas fa-briefcase me-2"></i>
                                    Informations professionnelles
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="occupation" class="form-label">
                                            <i class="fas fa-user-tie me-2 text-primary"></i>Occupation
                                        </label>
                                        <input type="text" class="form-control" id="occupation" name="occupation" placeholder="√âtudiant, Entrepreneur, etc.">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="organization" class="form-label">
                                            <i class="fas fa-building me-2 text-primary"></i>Organisation
                                        </label>
                                        <input type="text" class="form-control" id="organization" name="organization">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="position" class="form-label">
                                            <i class="fas fa-id-badge me-2 text-primary"></i>Poste
                                        </label>
                                        <input type="text" class="form-control" id="position" name="position">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Motivation -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-header bg-primary text-white">
                                <h4 class="mb-0">
                                    <i class="fas fa-heart me-2"></i>
                                    Motivation
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label for="motivation" class="form-label">
                                        <i class="fas fa-comment me-2 text-primary"></i>
                                        Pourquoi souhaitez-vous participer au Forum YouthConnekt Sahel 2025 ?
                                    </label>
                                    <textarea class="form-control" id="motivation" name="motivation" rows="4" 
                                              placeholder="D√©crivez vos motivations, vos attentes et ce que vous esp√©rez apporter au forum..."></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Soumission -->
                        <div class="card shadow-lg border-0 mb-4">
                            <div class="card-body text-center">
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        J'accepte les <a href="/terms" target="_blank">conditions g√©n√©rales</a> et la <a href="/privacy" target="_blank">politique de confidentialit√©</a> *
                                    </label>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Soumettre mon inscription
                                </button>
                                
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Vous recevrez un email de confirmation apr√®s votre inscription
                                    </small>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('../layouts/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>

    <script>
        const API_BASE = '<%= typeof apiBaseUrl !== "undefined" ? apiBaseUrl : "http://localhost:8000/api" %>';

        function toggleRegistrationType() {
            const type = document.querySelector('input[name="inscription_type"]:checked').value;
            const nationalDocs = document.getElementById('national-documents');
            const internationalDocs = document.getElementById('international-documents');
            
            if (type === 'national') {
                nationalDocs.style.display = 'block';
                internationalDocs.style.display = 'none';
                // Rendre les champs nationaux requis
                document.getElementById('id_card_number').required = true;
                document.getElementById('id_card_image').required = true;
                document.getElementById('passport_number').required = false;
                document.getElementById('passport_image').required = false;
                // Mettre √† jour les styles des cartes
                document.querySelectorAll('.form-check').forEach(card => card.classList.remove('bg-light'));
                document.querySelector('#national').closest('.form-check').classList.add('bg-light');
            } else {
                nationalDocs.style.display = 'none';
                internationalDocs.style.display = 'block';
                // Rendre les champs internationaux requis
                document.getElementById('id_card_number').required = false;
                document.getElementById('id_card_image').required = false;
                document.getElementById('passport_number').required = true;
                document.getElementById('passport_image').required = true;
                // Mettre √† jour les styles des cartes
                document.querySelectorAll('.form-check').forEach(card => card.classList.remove('bg-light'));
                document.querySelector('#international').closest('.form-check').classList.add('bg-light');
            }
        }

        // Gestion du formulaire d'inscription
        document.getElementById('registrationForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const originalBtnText = submitBtn.innerHTML;
            
            // Affichage du loading
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Inscription en cours...';
            
            try {
                const formData = new FormData(this);
                
                // Ajouter le type d'inscription
                const type = document.querySelector('input[name="inscription_type"]:checked').value;
                formData.append('type', type);
                
                const response = await fetch(`${API_BASE}/participants/register`, {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Affichage du succ√®s
                    document.body.innerHTML = `
                        <div class="container mt-5">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card border-success">
                                        <div class="card-header bg-success text-white text-center">
                                            <h3><i class="fas fa-check-circle me-2"></i>Inscription r√©ussie !</h3>
                                        </div>
                                        <div class="card-body text-center">
                                            <h4 class="text-success mb-3">F√©licitations !</h4>
                                            <p class="lead">Votre inscription au Forum YouthConnekt Sahel 2025 a √©t√© enregistr√©e avec succ√®s.</p>
                                            <div class="alert alert-info">
                                                <i class="fas fa-envelope me-2"></i>
                                                Un email de confirmation a √©t√© envoy√© √† <strong>${formData.get('email')}</strong>
                                            </div>
                                            <p class="text-muted">Veuillez confirmer votre email pour finaliser votre inscription.</p>
                                            <a href="/" class="btn btn-primary btn-lg mt-3">
                                                <i class="fas fa-home me-2"></i>Retour √† l'accueil
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                } else {
                    throw new Error(result.message || 'Erreur lors de l\'inscription');
                }
                
            } catch (error) {
                alert('Erreur: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalBtnText;
            }
        });

        // Validation des fichiers
        document.querySelectorAll('input[type="file"]').forEach(input => {
            input.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    // V√©rifier la taille (5MB max)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('Le fichier est trop volumineux. Taille maximum: 5MB');
                        this.value = '';
                        return;
                    }
                    
                    // V√©rifier le type
                    if (!file.type.startsWith('image/')) {
                        alert('Veuillez s√©lectionner une image valide');
                        this.value = '';
                        return;
                    }
                }
            });
        });

        // Initialisation
        toggleRegistrationType();
    </script>
</body>
</html>
