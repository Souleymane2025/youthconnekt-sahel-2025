        overflow: hidden;
    }

    .sponsor-card:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .sponsor-name {
        transition: all 0.3s ease;
    }

    .sponsor-card:hover .sponsor-name {
        color: #FF6B35 !important;
        transform: scale(1.05);
    }

    .benefit-item {
        transition: all 0.3s ease;
    }

    .benefit-item:hover {
        transform: translateY(-5px);
    }
