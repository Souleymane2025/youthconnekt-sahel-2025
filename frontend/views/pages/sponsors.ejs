<%- include('../layouts/header', { title: title, page: page }) %>

<!-- Hero Section -->
<section class="hero-section py-5" style="background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content text-white">
                    <h1 class="display-4 fw-bold mb-4">
                        <span class="typing-animation">Nos Sponsors</span>
                    </h1>
                    <p class="lead mb-4">
                        Découvrez nos sponsors qui contribuent au succès du Forum YouthConnekt Sahel 2025 
                        et soutiennent l'émancipation de la jeunesse sahélo-saharienne.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div style="width: 100%; height: 300px; background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.2)); border-radius: 20px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-donate fa-5x text-white opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

