<%- include('../layouts/header') %>

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Navigation retour -->
            <div class="mb-4">
                <a href="/blog" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Retour au blog
                </a>
            </div>

            <!-- Article -->
            <article class="card shadow-sm">
                <% if (blog.image) { %>
                    <img src="<%= blog.image %>" class="card-img-top" alt="<%= blog.title %>" style="height: 400px; object-fit: cover;">
                <% } else { %>
                    <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-newspaper text-white" style="font-size: 4rem;"></i>
                    </div>
                <% } %>
                
                <div class="card-body p-4">
                    <!-- Métadonnées -->
                    <div class="mb-3">
                        <span class="badge bg-secondary me-2"><%= blog.category %></span>
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i> <%= new Date(blog.createdAt).toLocaleDateString('fr-FR') %>
                            <i class="fas fa-user ms-3 me-1"></i> <%= blog.author %>
                            <i class="fas fa-eye ms-3 me-1"></i> <%= blog.views || 0 %> vues
                        </small>
                    </div>
                    
                    <!-- Titre -->
                    <h1 class="card-title display-5 fw-bold text-primary mb-4">
                        <%= blog.title %>
                    </h1>
                    
                    <!-- Contenu -->
                    <div class="card-text">
                        <%= blog.content.replace(/\n/g, '<br>') %>
                    </div>
                    
                    <!-- Tags -->
                    <% if (blog.tags && blog.tags.length > 0) { %>
                        <div class="mt-4 pt-3 border-top">
                            <h6 class="text-muted mb-2">Tags :</h6>
                            <% blog.tags.forEach(tag => { %>
                                <span class="badge bg-light text-dark me-2 mb-2">#<%= tag %></span>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </article>

            <!-- Actions -->
            <div class="mt-4 text-center">
                <a href="/blog" class="btn btn-primary me-2">
                    <i class="fas fa-list me-2"></i>Voir tous les articles
                </a>
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i>Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
