<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('../layouts/dashboard-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../layouts/dashboard-sidebar') %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-handshake text-primary me-2"></i>
                        Gestion des Partenaires
                    </h1>
                </div>

                <!-- Statistiques -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card stats-card">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-handshake"></i>
                                </h5>
                                <h3 id="totalPartners">-</h3>
                                <p class="mb-0">Total Partenaires</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-clock"></i>
                                </h5>
                                <h3 id="pendingPartners">-</h3>
                                <p class="mb-0">En Attente</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-check-circle"></i>
                                </h5>
                                <h3 id="approvedPartners">-</h3>
                                <p class="mb-0">Approuvés</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stats-card">
                            <div class="card-body text-center">
                                <h5 class="card-title">
                                    <i class="fas fa-times-circle"></i>
                                </h5>
                                <h3 id="rejectedPartners">-</h3>
                                <p class="mb-0">Rejetés</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Partenaires -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Liste des Partenaires
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="partnersTable">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Type</th>
                                        <th>Email</th>
                                        <th>Statut</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="partnersTableBody">
                                    <tr>
                                        <td colspan="6" class="text-center">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Chargement...</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Charger les partenaires
        async function loadPartners() {
            try {
                const response = await fetch('/admin/api/partners');
                const data = await response.json();
                
                if (data.success) {
                    renderPartners(data.data);
                    updateStats(data.data);
                } else {
                    document.getElementById('partnersTableBody').innerHTML = `
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                                <p>Erreur lors du chargement des partenaires</p>
                            </td>
                        </tr>
                    `;
                }
            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('partnersTableBody').innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                            <p>Erreur de connexion</p>
                        </td>
                    </tr>
                `;
            }
        }

        function renderPartners(partners) {
            const tbody = document.getElementById('partnersTableBody');
            
            if (partners.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            <i class="fas fa-handshake fa-2x mb-3"></i>
                            <p>Aucun partenaire trouvé</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = partners.map(partner => `
                <tr>
                    <td><strong>${partner.organization_name}</strong></td>
                    <td>
                        <span class="badge bg-info">${partner.partner_type || 'Partenaire'}</span>
                    </td>
                    <td>${partner.email}</td>
                    <td>
                        <span class="badge ${getStatusClass(partner.status)}">
                            ${getStatusText(partner.status)}
                        </span>
                    </td>
                    <td>${new Date(partner.createdAt).toLocaleDateString('fr-FR')}</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-success" onclick="approvePartner('${partner.id}')">
                                <i class="fas fa-check"></i>
                            </button>
                            <button class="btn btn-outline-danger" onclick="rejectPartner('${partner.id}')">
                                <i class="fas fa-times"></i>
                            </button>
                            <button class="btn btn-outline-primary" onclick="viewPartner('${partner.id}')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function updateStats(partners) {
            const total = partners.length;
            const pending = partners.filter(p => p.status === 'pending').length;
            const approved = partners.filter(p => p.status === 'approved').length;
            const rejected = partners.filter(p => p.status === 'rejected').length;

            document.getElementById('totalPartners').textContent = total;
            document.getElementById('pendingPartners').textContent = pending;
            document.getElementById('approvedPartners').textContent = approved;
            document.getElementById('rejectedPartners').textContent = rejected;
        }

        function getStatusClass(status) {
            switch(status) {
                case 'approved': return 'bg-success';
                case 'pending': return 'bg-warning';
                case 'rejected': return 'bg-danger';
                default: return 'bg-secondary';
            }
        }

        function getStatusText(status) {
            switch(status) {
                case 'approved': return 'Approuvé';
                case 'pending': return 'En attente';
                case 'rejected': return 'Rejeté';
                default: return 'Inconnu';
            }
        }

        function approvePartner(partnerId) {
            if (confirm('Approuver ce partenaire ?')) {
                updatePartnerStatus(partnerId, 'approved');
            }
        }

        function rejectPartner(partnerId) {
            if (confirm('Rejeter ce partenaire ?')) {
                updatePartnerStatus(partnerId, 'rejected');
            }
        }

        async function updatePartnerStatus(partnerId, status) {
            try {
                const response = await fetch(`/admin/api/partners/${partnerId}/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: status })
                });

                const data = await response.json();
                
                if (data.success) {
                    alert('Statut mis à jour avec succès');
                    loadPartners();
                } else {
                    alert('Erreur lors de la mise à jour');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur de connexion');
            }
        }

        function viewPartner(partnerId) {
            alert('Fonctionnalité de vue des détails à implémenter');
        }

        // Charger les partenaires au démarrage
        document.addEventListener('DOMContentLoaded', loadPartners);
    </script>
</body>
</html>


