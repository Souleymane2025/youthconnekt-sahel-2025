<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('../layouts/dashboard-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../layouts/dashboard-sidebar') %>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-blog text-primary me-2"></i>
                        Gestion des Blogs
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-primary" onclick="createBlog()">
                                <i class="fas fa-plus"></i> Nouveau Blog
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Blogs -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>
                            Articles de Blog
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="blogsTable">
                                <thead>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Catégorie</th>
                                        <th>Statut</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="blogsTableBody">
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Chargement...</span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Charger les blogs
        async function loadBlogs() {
            try {
                const response = await fetch('/admin/api/blogs');
                const data = await response.json();
                
                if (data.success) {
                    renderBlogs(data.data);
                } else {
                    document.getElementById('blogsTableBody').innerHTML = `
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                                <p>Erreur lors du chargement des blogs</p>
                            </td>
                        </tr>
                    `;
                }
            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('blogsTableBody').innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                            <p>Erreur de connexion</p>
                        </td>
                    </tr>
                `;
            }
        }

        function renderBlogs(blogs) {
            const tbody = document.getElementById('blogsTableBody');
            
            if (blogs.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-blog fa-2x mb-3"></i>
                            <p>Aucun article de blog</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = blogs.map(blog => `
                <tr>
                    <td><strong>${blog.title}</strong></td>
                    <td>
                        <span class="badge bg-info">${blog.category || 'Général'}</span>
                    </td>
                    <td>
                        <span class="badge ${blog.status === 'published' ? 'bg-success' : 'bg-warning'}">
                            ${blog.status === 'published' ? 'Publié' : 'Brouillon'}
                        </span>
                    </td>
                    <td>${new Date(blog.createdAt).toLocaleDateString('fr-FR')}</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" onclick="editBlog('${blog.id}')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-success" onclick="publishBlog('${blog.id}')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-outline-danger" onclick="deleteBlog('${blog.id}')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function createBlog() {
            alert('Fonctionnalité de création de blog à implémenter');
        }

        function editBlog(blogId) {
            alert('Fonctionnalité d\'édition de blog à implémenter');
        }

        function publishBlog(blogId) {
            alert('Fonctionnalité de publication de blog à implémenter');
        }

        function deleteBlog(blogId) {
            if (confirm('Êtes-vous sûr de vouloir supprimer ce blog ?')) {
                alert('Fonctionnalité de suppression de blog à implémenter');
            }
        }

        // Charger les blogs au démarrage
        document.addEventListener('DOMContentLoaded', loadBlogs);
    </script>
</body>
</html>

