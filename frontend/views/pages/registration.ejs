    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Force reload - Timestamp: <%= new Date().getTime() %>
        console.log('Registration form loaded at:', new Date().toISOString());
        
        // Message management functions
        function showMessage(message, type = 'info') {
            const messageArea = document.getElementById('message-area');
            const messageContent = document.getElementById('message-content');
            const messageText = document.getElementById('message-text');
            
            // Set message text
            messageText.textContent = message;
            
            // Set alert class based on type
            messageContent.className = 'alert';
            switch(type) {
                case 'success':
                    messageContent.classList.add('alert-success');
                    break;
                case 'error':
                case 'danger':
                    messageContent.classList.add('alert-danger');
                    break;
                case 'warning':
                    messageContent.classList.add('alert-warning');
                    break;
                default:
                    messageContent.classList.add('alert-info');
            }
            
            // Show message area
            messageArea.style.display = 'block';
            
            // Scroll to message
            messageArea.scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            // Auto-hide success messages after 5 seconds
            if (type === 'success') {
                setTimeout(() => {
                    hideMessage();
                }, 5000);
            }
        }
        
        function hideMessage() {
            const messageArea = document.getElementById('message-area');
            messageArea.style.display = 'none';
        }
        
        // Generate participant ID
        function generateParticipantId() {
            const timestamp = Date.now().toString().slice(-6);
            const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
            return `FYCS2025${timestamp}${random}`;
        }
        
        // Set participant ID
        document.getElementById('participant-id').textContent = generateParticipantId();
        
        // Toggle province section for Chad and manual country input
        function toggleProvinceSection() {
            const country = document.getElementById('country').value;
            const provinceSection = document.getElementById('province-section');
            const provinceSelect = document.getElementById('province');
            const manualCountrySection = document.getElementById('manual-country-section');
            const manualCountryInput = document.getElementById('manual_country');
            
            if (country === 'Tchad') {
                provinceSection.style.display = 'block';
                provinceSelect.required = true;
                manualCountrySection.style.display = 'none';
                manualCountryInput.required = false;
            } else if (country === 'Autre') {
                provinceSection.style.display = 'none';
                provinceSelect.required = false;
                provinceSelect.value = '';
                manualCountrySection.style.display = 'block';
                manualCountryInput.required = true;
            } else {
                provinceSection.style.display = 'none';
                provinceSelect.required = false;
                provinceSelect.value = '';
                manualCountrySection.style.display = 'none';
                manualCountryInput.required = false;
            }
        }
        
        // Toggle handicap section
        function toggleHandicapSection() {
            const handicap = document.getElementById('handicap').value;
            const handicapSection = document.getElementById('handicap-details');
            
            if (handicap === 'yes') {
                handicapSection.style.display = 'block';
            } else {
                handicapSection.style.display = 'none';
            }
        }
        
        // Toggle occupation-specific fields
        function toggleOccupationFields() {
            const occupation = document.getElementById('occupation').value;
            const organizationSection = document.getElementById('organization-section');
            const headOfStateFields = document.getElementById('head-of-state-fields');
            const governmentDelegationFields = document.getElementById('government-delegation-fields');
            const speakerFields = document.getElementById('speaker-fields');
            const ministerFields = document.getElementById('minister-fields');
            
            // Hide all specific fields first with animation
            hideFieldWithAnimation(headOfStateFields);
            hideFieldWithAnimation(governmentDelegationFields);
            hideFieldWithAnimation(speakerFields);
            hideFieldWithAnimation(ministerFields);
            
            // Reset required fields
            document.getElementById('organization').required = false;
            document.getElementById('country_represented').required = false;
            document.getElementById('ministry').required = false;
            document.getElementById('speaker_type').required = false;
            document.getElementById('session_topic').required = false;
            document.getElementById('ministry_name').required = false;
            
            // Show organization section by default
            organizationSection.style.display = 'block';
            
            // Show specific fields based on occupation
            switch(occupation) {
                case 'head_of_state':
                    showFieldWithAnimation(headOfStateFields);
                    document.getElementById('country_represented').required = true;
                    break;
                    
                case 'government_delegation':
                    showFieldWithAnimation(governmentDelegationFields);
                    document.getElementById('ministry').required = true;
                    break;
                    
                case 'speaker':
                case 'panelist':
                case 'moderator':
                case 'workshop_leader':
                    showFieldWithAnimation(speakerFields);
                    document.getElementById('speaker_type').required = true;
                    document.getElementById('session_topic').required = true;
                    break;
                    
                case 'minister':
                    showFieldWithAnimation(ministerFields);
                    document.getElementById('ministry_name').required = true;
                    break;
                    
                case 'student':
                case 'unemployed':
                case 'retired':
                    // Hide organization section for these categories
                    organizationSection.style.display = 'none';
                    break;
                    
                default:
                    // Show organization section for other categories
                    organizationSection.style.display = 'block';
                    document.getElementById('organization').required = true;
            }
        }
        
        // Helper functions for animations
        function showFieldWithAnimation(field) {
            field.style.display = 'block';
            field.classList.add('fade-in');
            setTimeout(() => {
                field.classList.remove('fade-in');
            }, 300);
        }
        
        function hideFieldWithAnimation(field) {
            field.style.display = 'none';
            field.classList.remove('fade-in');
        }
        
        // Preview photo
        function previewPhoto(input) {
            const preview = document.getElementById('photo-preview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" class="preview-image" alt="Photo preview">`;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
        
        // Preview document
        function previewDocument(input, previewId) {
            const preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                const fileName = input.files[0].name;
                preview.innerHTML = `<div class="alert alert-info"><i class="fas fa-file me-2"></i>${fileName}</div>`;
            }
        }
        
        // Character count for textareas
        document.getElementById('experience').addEventListener('input', function() {
            const count = 500 - this.value.length;
            document.getElementById('exp-count').textContent = count;
        });
        
        document.getElementById('motivation').addEventListener('input', function() {
            const count = 300 - this.value.length;
            document.getElementById('mot-count').textContent = count;
        });
        
        // Form submission
        document.getElementById('registration-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Inscription en cours...';
            submitBtn.disabled = true;
            
            try {
                const formData = new FormData(this);
                
                const response = await fetch('/participants/register-complete', {
                    method: 'POST',
                    body: formData,
                    cache: 'no-cache',
                    headers: {
                        'Cache-Control': 'no-cache'
                    }
                });
                
                let result;
                try {
                    result = await response.json();
                    console.log('Response status:', response.status);
                    console.log('Response data:', result);
                } catch (e) {
                    console.error('JSON parse error:', e);
                    // If we can't parse JSON, create a generic error
                    result = { success: false, message: 'Erreur de communication avec le serveur' };
                }
                
                if (response.ok && result.success) {
                    // Show success message
                    showMessage('✅ Inscription réussie ! Vous recevrez un email de confirmation.', 'success');
                    
                    // Reset form
                    document.getElementById('registration-form').reset();
                    
                    // Redirect after 3 seconds
                    setTimeout(() => {
                        window.location.href = '/registration-success';
                    }, 3000);
                } else {
                    // Show the specific error message from the server
                    let errorMessage = 'Erreur lors de l\'inscription';
                    
                    // Handle specific error cases
                    if (response.status === 409) {
                        errorMessage = 'Cette adresse email est déjà utilisée. Veuillez utiliser une autre adresse email.';
                    } else if (response.status === 400) {
                        errorMessage = result.message || 'Veuillez vérifier vos informations et réessayer.';
                    } else if (result.message && !result.message.includes('Request failed')) {
                        errorMessage = result.message;
                    } else {
                        // Handle generic error messages
                        switch(response.status) {
                            case 409:
                                errorMessage = 'Cette adresse email est déjà utilisée. Veuillez utiliser une autre adresse email.';
                                break;
                            case 400:
                                errorMessage = 'Veuillez vérifier vos informations et réessayer.';
                                break;
                            case 500:
                                errorMessage = 'Erreur interne du serveur. Veuillez réessayer plus tard.';
                                break;
                            default:
                                errorMessage = `Erreur serveur (${response.status}). Veuillez réessayer.`;
                        }
                    }
                    
                    showMessage('❌ ' + errorMessage, 'error');
                }
            } catch (error) {
                console.error('Erreur:', error);
                showMessage('❌ Impossible de contacter le serveur. Veuillez réessayer plus tard.', 'error');
            } finally {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });
    </script>
